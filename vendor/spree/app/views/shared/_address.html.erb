<%
# HACK - in_place_editor field works only with instance variables and not local variables  
# See http://dev.rubyonrails.org/ticket/3094 for details

@address = address 
%>

<table cellpadding="0" cellspacing="0">
  <tr>
    <td><%="#{address.firstname} #{address.lastname}" %></td>
  </tr>
  <tr>
    <td>
       <%= address.address1 %>
    </td>
  </tr>
  <tr>
    <td>
      <%= address.address2 %>
    </td>
  </tr>
  <tr>
    <td>
      <%= "#{address.city}, #{address.state_name || address.state.abbr} #{address.zipcode}" %>
    </td>
  </tr>
  <tr>
    <td>
      <%= address.country.name %>       
    </td>
  </tr>
  <tr>
    <td><%= address.phone %></td>
  </tr>
</table>