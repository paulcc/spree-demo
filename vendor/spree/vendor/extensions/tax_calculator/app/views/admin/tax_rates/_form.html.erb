<table>
  <tr>
    <td><%=t("zone")%>:</td>
    <td><%= collection_select(:tax_rate, :zone_id, @available_zones, :id, :name, {}, {"style" => "width:200px"}) %></td>
  </tr>
  <tr>
    <td><%=t("category")%>:</td>
    <td><%= collection_select(:tax_rate, 
                              :tax_category_id, @available_categories, :id, :name, 
                              {}, {"style" => "width:200px"}) %></td>
  </tr>
  <tr>
    <td><%=t("rate")%>:</td>
    <td><%= f.text_field :amount, {"style" => "width:200px"} %></td>
  </tr>
  <tr>
    <td><%=t("tax_type")%>:</td>
    <td><%= f.collection_select :tax_type, TaxRate::TaxType.constants, :id, :title, {}, {:style => "width:200px"}%> </td>
  </tr>
</table>